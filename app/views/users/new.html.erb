<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<p>This will be a signup page for new users.</p>

<%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages' %>

    <p><%= f.label :name %><br>
    <%= f.text_field :name %></p>

    <p><%= f.label :email %><br>
    <%= f.email_field :email %></p>

    <p><%= f.label :password, "Password (6 characters minimum)" %><br>
    <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation, "Confirmation" %><br>
    <%= f.password_field :password_confirmation %></p>

    <p><%= f.submit "Sign up" %></p>
<% end %>

<p> 
    <%= link_to "Log In", '#' %>
</p>

